---
import { db, Order } from "astro:db";

const orders = await db.select().from(Order);
---

<div class="flex flex-row items-center gap-8 mt-8 w-full">
  <div id="2000" class="text-center">
    <img src="/upi2000.png" alt="" />
    ₹2000
  </div>
  <div id="1500" class="text-center">
    <img src="/upi1500.png" alt="" />
    ₹1500
  </div>
  <div id="1000" class="text-center">
    <img src="/upi1000.png" alt="" />
    ₹1000
  </div>
</div>

<div class="flex flex-col">
  {
    orders.map(({ fname, lname, email, phno, address, pincode, paid }) => (
      <div class="border-2">
        <h1>
          {fname} {lname}
        </h1>
        <h1>{email}</h1>
        <h1>{phno}</h1>
        <h1>{address}</h1>
        <h1>{pincode}</h1>
        <h1>{paid ? "yes" : "no"}</h1>
      </div>
    ))
  }
</div>
